{
  "name": "arcadedb-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for ArcadeDB Studio",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "install-browsers": "npx playwright install",
    "test:codemirror": "./run-codemirror-tests.sh",
    "test:codemirror:basic": "playwright test tests/codemirror-basic-functionality.spec.ts",
    "test:codemirror:language": "playwright test tests/codemirror-language-support.spec.ts",
    "test:codemirror:advanced": "playwright test tests/codemirror-advanced-features.spec.ts",
    "test:codemirror:integration": "playwright test tests/codemirror-integration-tests.spec.ts",
    "test:codemirror:compatibility": "playwright test tests/codemirror-compatibility-validation.spec.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "testcontainers": "^11.2.1",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
